#! /usr/bin/awk -f
# Fixes HTML generated by pandoc that looks like this:
#   <body>
#   <p
#   >Sino Galati, Autoservice (31 March 2010):</p
#   ><blockquote
#   ><p
#     >I am very impressed with

/^ *>/   { 
           print prev ">";
           prev = $0;
           sub(/>/, "", prev);  # remove the > but leave the indentation
         }
! /^ *>/ {
           if (NR > 1)
             print prev;
           prev = $0;
         }
END { print prev; }
